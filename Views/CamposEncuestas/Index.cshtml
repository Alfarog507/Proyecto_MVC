@model IEnumerable<MVCCRUD2.Models.CamposEncuesta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCampo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsRequerido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoCampo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Encuesta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCampo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsRequerido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCampo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Encuesta.EncuestaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CampoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CampoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CampoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
